{
  "dxt_version": "0.2",
  "name": "@turbopuffer/turbopuffer-mcp",
  "version": "1.14.4",
  "description": "The official MCP Server for the Turbopuffer API",
  "author": {
    "name": "Turbopuffer",
    "email": "info@turbopuffer.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turbopuffer/turbopuffer-typescript.git"
  },
  "homepage": "https://github.com/turbopuffer/turbopuffer-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "https://turbopuffer.com/docs/auth",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "TURBOPUFFER_API_KEY": "${user_config.TURBOPUFFER_API_KEY}",
        "TURBOPUFFER_REGION": "${user_config.TURBOPUFFER_REGION}",
        "TURBOPUFFER_DEFAULT_NAMESPACE": "${user_config.TURBOPUFFER_DEFAULT_NAMESPACE}"
      }
    }
  },
  "user_config": {
    "TURBOPUFFER_API_KEY": {
      "title": "api_key",
      "description": "API key used for authentication",
      "required": true,
      "type": "string"
    },
    "TURBOPUFFER_REGION": {
      "title": "region",
      "description": "The turbopuffer region to use.",
      "required": false,
      "type": "string"
    },
    "TURBOPUFFER_DEFAULT_NAMESPACE": {
      "title": "default_namespace",
      "description": "",
      "required": false,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
